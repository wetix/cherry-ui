{
  "name": "responsive-ui-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "components/*",
    "packages/*"
  ],
  "resolutions": {
    "npm-packlist": "^1.4.4"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "dev": "vite",
    "start": "sirv public --port 3600",
    "validate": "svelte-check --workspace=components",
    "storybook": "export NODE_OPTIONS=--openssl-legacy-provider; start-storybook -p 6006 -s ./public",
    "build-storybook": "build-storybook -s ./public",
    "test": "jest components",
    "chromatic": "npx chromatic --project-token=eb1e588f7ddb"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.4",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/svelte": "^6.3.12",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^2.0.1",
    "@types/jest": "^27.0.2",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "camelcase": "^6.2.0",
    "chalk": "^4.1.2",
    "chromatic": "^6.0.4",
    "css-loader": "^6.4.0",
    "faker": "^5.5.3",
    "file-loader": "^6.2.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "rollup": "^2.58.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.43.3",
    "sass-loader": "^12.2.0",
    "sirv-cli": "^1.0.12",
    "style-loader": "^3.3.1",
    "svelte": "^3.38.2",
    "svelte-check": "^2.0.0",
    "svelte-jester": "^2.1.5",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.9.8",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "url-loader": "^4.1.1",
    "vite": "^2.6.10"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ]
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|stylesheet)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ]
  },
  "peerDependencies": {
    "svelte": "^3.27.0",
    "svelte-preprocess": "^4.5.0",
    "typescript": "^4.0.0"
  }
}
