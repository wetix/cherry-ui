{
  "name": "responsive-ui-monorepo",
  "version": "1.0.9-alpha.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "components/*",
    "packages/*"
  ],
  "resolutions": {
    "npm-packlist": "^1.4.4"
  },
  "scripts": {
    "force-bump": "lerna version prepatch --no-git-tag-version --no-push --force-publish",
    "bump": "lerna version --conventional-commits --no-git-tag-version",
    "patch": "lerna version patch --conventional-commits --no-git-tag-version",
    "minor": "lerna version minor --conventional-commits --no-git-tag-version",
    "major": "lerna version major --conventional-commits --no-git-tag-version",
    "preversion": "npm run generate:readme && npm run generate:changelog && npm run build",
    "build": "node ./scripts/buildComponents.js",
    "build:readme": "node ./scripts/buildReadme.js",
    "build:debug": "DEBUG=true node ./scripts/buildComponents.js",
    "build:changelog": "npx conventional-changelog --preset angular --release-count 0 --outfile ./CHANGELOG.md",
    "dev": "vite",
    "start": "sirv public --port 3600",
    "validate": "svelte-check --workspace=components",
    "storybook": "start-storybook -p 6006 -s ./public",
    "build-storybook": "build-storybook -s ./public",
    "test": "jest components",
    "commit": "cz",
    "gitcommit": "git add . && git commit -m \"ðŸ”– chore(release): publish `node -p 'require(\"./lerna.json\").version'`\"",
    "chromatic": "npx chromatic --project-token=eb1e588f7ddb"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/runtime": "^7.16.3",
    "@microsoft/tsdoc": "^0.13.2",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/svelte": "^6.4.9",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.31",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^2.0.1",
    "@types/jest": "^27.0.3",
    "async": "^3.2.2",
    "babel-jest": "^27.4.2",
    "babel-loader": "^8.2.3",
    "camelcase": "^6.2.1",
    "chalk": "^5.0.0",
    "chromatic": "^6.1.0",
    "conventional-changelog-cli": "^2.1.1",
    "css-loader": "^6.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "faker": "^5.5.3",
    "file-loader": "^6.2.0",
    "jest": "^27.4.3",
    "lerna": "^4.0.0",
    "rollup": "2.60.2",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.45.0",
    "sass-loader": "^12.3.0",
    "sirv-cli": "^1.0.14",
    "style-loader": "^3.3.1",
    "svelte": "^3.44.2",
    "svelte-check": "^2.2.10",
    "svelte-jester": "^2.1.5",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.9.8",
    "ts-jest": "^27.1.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "url-loader": "^4.1.1",
    "vite": "^2.7.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ]
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|stylesheet)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ]
  },
  "peerDependencies": {
    "svelte": "^3.27.0",
    "svelte-preprocess": "^4.5.0",
    "typescript": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
